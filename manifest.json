{
    "manifest_version": 2,
    "name": "Preview",
    "description": "Need to think about your message before actually sending? Use this app to formulate your thoughts.",
    "version": "1.0",
    "permissions": ["activeTab"],
    "browser_action": {
      "default_popup": "popup.html",
      "default_icon": "MailLogo.png"
    },
    "icons": {
      "128": "MailLogo.png"
    },
    "background": {
      "scripts": ["background.js"],
      "persistent": false
    },
    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
  }
  